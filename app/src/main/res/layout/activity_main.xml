<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="50dp"
        android:id="@+id/solution_textView"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/result_textView"
        android:layout_margin="16dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="64dp"
        android:id="@+id/result_textView"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:background="#F1F1F1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="C"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_C">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_open_bracket"
                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="("
                android:textSize="20dp"
                app:cornerRadius="20dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text=")"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_close_bracket">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="sin"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_sin">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="78sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="cos"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_cos">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_tan"
                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="tan"
                android:textSize="20dp"
                app:cornerRadius="20dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="*"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_multiply">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="/"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_divide">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="9"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_9">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="8"
                android:textSize="20dp"
                app:cornerRadius="20dp"
                android:id="@+id/button_8">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="7"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_7">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="+"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_plus">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="6"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_6">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_5"
                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="5"
                android:textSize="20dp"
                app:cornerRadius="20dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="4"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_4">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="-"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_minus">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="3"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_3">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_2"
                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="2"
                android:textSize="20dp"
                app:cornerRadius="20dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="1"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_1">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="="
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_equal">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="AC"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_AC">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_0"
                android:layout_width="77sp"
                android:layout_height="60sp"
                android:layout_margin="12dp"
                android:text="0"
                android:textSize="20dp"
                app:cornerRadius="20dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="."
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_dot">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton

                android:layout_width="77sp"
                android:layout_height="60sp"
                app:cornerRadius="20dp"
                android:text="bye"
                android:textSize="20dp"
                android:layout_margin="12dp"
                android:id="@+id/button_off">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>